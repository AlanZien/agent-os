# Development Environment Configuration
# Copy this file to .env.dev and fill in your actual values

# Environment
ENV=dev
NODE_ENV=development

# ============================================================================
# DATABASE (Supabase)
# ============================================================================

# Option A: Supabase Cloud (Free Tier)
DATABASE_URL=postgresql://postgres:[YOUR_DEV_PASSWORD]@db.[YOUR_DEV_PROJECT_REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR_DEV_PROJECT_REF].supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[YOUR_DEV_ANON_KEY]
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[YOUR_DEV_SERVICE_KEY]

# Option B: Supabase Local (via supabase CLI)
# Uncomment these and comment out Option A to use local
# DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
# SUPABASE_URL=http://localhost:54321
# SUPABASE_ANON_KEY=[from supabase start output]
# SUPABASE_SERVICE_KEY=[from supabase start output]

# ============================================================================
# API CONFIGURATION
# ============================================================================

API_URL=http://localhost:8000
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

JWT_SECRET=dev-jwt-secret-change-me-min-32-chars-long
SESSION_SECRET=dev-session-secret-change-me
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Password Requirements (relaxed for dev)
MIN_PASSWORD_LENGTH=6

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================

# Notion Integration
NOTION_API_KEY=[YOUR_DEV_NOTION_API_KEY]
NOTION_DATABASE_ID=[YOUR_DEV_NOTION_DATABASE_ID]

# Email Service (Development - optional, can use Inbucket)
# SENDGRID_API_KEY=[YOUR_DEV_SENDGRID_KEY]
# FROM_EMAIL=dev@yourproject.com

# File Storage
STORAGE_BUCKET=dev-uploads
MAX_FILE_SIZE=10485760  # 10MB

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

LOG_LEVEL=debug
DEBUG=true
VERBOSE_LOGGING=true

# ============================================================================
# FEATURE FLAGS (Development)
# ============================================================================

ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_DATA=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Hot reload
HOT_RELOAD=true

# Seed database on startup
AUTO_SEED_DATABASE=false

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# Redis (if using caching)
# REDIS_URL=redis://localhost:6379

# Stripe (if using payments)
# STRIPE_SECRET_KEY=sk_test_[YOUR_DEV_STRIPE_KEY]
# STRIPE_PUBLISHABLE_KEY=pk_test_[YOUR_DEV_STRIPE_KEY]
